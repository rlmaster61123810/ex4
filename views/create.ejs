<%- include('layout/header')%>
<div class="container">
    <h1><i class="fa fa-list"></i> Todo List ::</h1>
        <hr>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                เพิ่มรายการ
                </h4>
            </div>
            <div class="panel-body">
                <form action="/store" method="POST"="form">
                    <div class="form-group">
                        <label for="inputName">กรอกชื่อรายการประยุทธ ประวิทย์ :: </label>
                        <input type="text" name="detail" placeholder="ชื่อรายการ" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="selectCategory">เลือกหมวดหมู่ :: </label>
                        <select name="category_id" id="" class="form-control">
                            <% categories.forEach(function(category){ %>
                                 <option value="<%= category.id %>"><%= category.name %></option>
                            <% }) %>
                        </select>  
         



                            
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success"> <i class="fa fa-save"></i> บันทึก</button>
                </form>
            </div>
        </div>
        <hr>
        <p>&copy; 2017 Bundit Nuntates</p>
        <%- include('layout/footer')%>
    </div>